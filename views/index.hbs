                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email">
                    </div>
                    <div class="col-12">
                        <label for="tel" class="form-label">Tel</label>
                        <input type="text" class="form-control" id="tel" placeholder="..." name="tel">
                    </div>
                    <div class="col-12">
                        <label for="mensaje" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="mensaje" row="3" name="mensaje">
                    </textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
                <p class="mensaje">{{message}}</p>
            </div>
        </div>
    </div>
