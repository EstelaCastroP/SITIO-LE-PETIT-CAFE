<div class="container-fluid">
    <div class="row py-3 my-5 scroll_section">
        <div class="col-md-4 offset-md-1">
            <h2 id="visitanos">Estamos en..</h2>
            <div class="mapa">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6569.002803345297!2d-58.4253417!3d-34.5914806!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcca7e3934d30b%3A0xef0a7396e115e0b4!2sCosta%20Rica%203552%2C%20C1176ADB%20CABA!5e0!3m2!1ses!2sar!4v1686246255381!5m2!1ses!2sar"
                    width="450" height="400" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade" width="300" height="220" style="border-radius: 8px" ;
                    allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>

        <div class="col-md-4 mt-0 mt-sm-0">
            <h2 id="visitanos">Contactanos</h2>
            <form id="contactanos" class="row g-3" action="/" method="post">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div>
                <div class="col-md-6">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="apellido">
                </div>
                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email">
                </div>
                <div class="col-12">
                    <label for="tel" class="form-label">Tel</label>
                    <input type="text" class="form-control" id="tel" placeholder="..." name="tel">
                </div>
                <div class="col-12">
                    <label for="mensaje" class="form-label">Mensaje</label>
                    <textarea class="form-control" id="mensaje" row="3" name="mensaje">
                    </textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
            <p class="mensaje">{{message}}</p>
        </div>
    </div>
</div>
<!--cierre mapa y formulario-->