<!--inicio novedades-->
<div class="container">
    <h2 class="novedades">Lista de Novedades</h2>
    <div id="novedades" class="row row-cols-3 row-cols-md-5 g-4 scroll_section">

        {{#each novedades}}
        <div class="card text-center mb-3 card border-light mb-3" style="margin: 30px">
            <img src="{{imagen}}" height="250" class="card-img" alt="imagen">
            <div class="card-img-overlay" style="color:rgb(13, 13, 12)">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                        data-bs-target="#exampleModal2{{id}}">{{subtitulo}}</button>
                </div>
            </div>
        </div>
        {{/each}}

        {{#each novedades}}
        <div class="modal fade" id="exampleModal2{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" style="color:rgb(148, 73, 19)">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">{{titulo}}</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center mb-3" style="color:rgb(148, 73, 19)">
                        <h3 style="font-size:30px">{{subtitulo}}</h3>
                        <img src="{{imagen}}">
                        <p style="font-size:20px">{{cuerpo}}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<!--cierro novedades-->

